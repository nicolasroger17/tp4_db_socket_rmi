
import java.util.ArrayList;

public class CompteCourant extends Compte {

    protected ArrayList<Transaction> transactions = null;

    public CompteCourant (double tauxInteret, double sold) {
        super(tauxInteret, sold);        
    }

    public double retreat (double debit) {
        if(this.sold > debit){
            this.sold -= debit;
            System.out.println("Vous avez débité : "+debit);
            return debit;
        }
        return 0;
    }

    @Override
    public void getSold () {
        System.out.println("Le solde de votre Compte courant est de "+this.sold);
    }

    public ArrayList<Transaction> displayStatementOfAccount () {
        return transactions;
    }

    public void setTranscations (Transaction transaction) {
        transactions.add(transaction);
    }

    public void addCredit (double val) {
        super.addCredit(val);
        setTransaction(new Transaction());
    }

    public ArrayList<Transaction> getTransactions () {
        return transactions;
    }

    public void setTransactions (ArrayList<Transaction> val) {
        this.transactions = val;
    }

}